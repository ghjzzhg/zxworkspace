<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- 不用重启服务器 -->
	<constant name="struts.i18n.reload" value="true" />
	<constant name="struts.configuration.xml.reload" value="true" />
	<!-- 表单样式 -->
	<constant name="struts.ui.theme" value="simple" />
	<!-- 国际化文件 -->
	<constant name="struts.custom.i18n.resources" value="messages"/>
	<!-- 动态方法调用 -->
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />
	<!-- 配置上传路径 -->
	<constant name="struts.multipart.saveDir" value="/file/upload/"/>
	
	<package name="ghjmaven" extends="json-default">
 	  <!-- 注册拦截器栈对象 -->
	    <interceptors>
	       <interceptor name="mylogin" class="myintercepter"></interceptor>
	       <interceptor-stack name="mystack">
	         <interceptor-ref name="mylogin">
<!-- 	       login 方法执行 mylogin拦截器无效 不执行 -->
	           <param name="excludeMethods">login</param>
	         </interceptor-ref>
	         <interceptor-ref name="defaultStack"></interceptor-ref>
	       </interceptor-stack>
	    </interceptors>
	    <!-- 当前包下的所有的action所有业务方法 都要执行 mystack 拦截器栈所有拦截器组件 -->
	  <default-interceptor-ref name="mystack"></default-interceptor-ref>
	    
	    <!-- 全局结果集配置 -->
	   <global-results>
	     <result name="no_login" type="redirect">/login.jsp</result>
	   </global-results>
	   
		<!-- 需要进行权限控制的页面访问 -->
		<action name="page_*_*">
			<result type="dispatcher">/WEB-INF/pages/{1}/{2}.jsp</result>
		</action>
		
		<action name="index">
			<result>/index.jsp</result>
		</action>
	</package>

</struts>